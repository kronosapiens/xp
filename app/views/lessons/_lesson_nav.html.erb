            <% end %>
          </select>
        </div>
        <div class="chosen-box">
          <select data-placeholder="Select Times" style="width:220px;" multiple class="chosen-index chosen-select tag-select" tabindex="8">
            <% @time_tags.each do |tag| %>
            <option id="<%= tag.id %>"><%= tag.name %></option>
            <% end %>
          </select>
        </div>
